#â­â­ Ask for a list of grades and print the average letter grade.

def letter_grade(number_grade):
    if number_grade >= 90: return 'A'
    elif number_grade >= 80: return 'B'
    elif number_grade >= 70: return 'C'
    elif number_grade >= 60: return 'D'
    else: return 'F'

def grade_average(grades_list):
    avg = sum(grades_list) / len(grades_list)
    result_letter = letter_grade(avg) 
    return avg, result_letter

user_input = input("Enter grades separated by space: ")
r
grades = [int(item) for item in user_input.split()]

if grades:
    average_num, average_letter = grade_average(grades)
    print(f'Your average is: {average_num:.2f} ({average_letter})')
else:
    print("No grades entered.")